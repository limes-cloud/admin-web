{
	"compilerOptions": {
		"allowJs": true,
		"target": "ES2020",
		"module": "ES2020",
		"moduleResolution": "node",
		"strict": true,
		"noImplicitAny": false,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"src/*"
			]
		},
		"lib": [
			"es2020",
			"dom"
		],
		"skipLibCheck": true
	},
	"include": [
		"src/**/*",
		"src/**/*.vue",
		"src/type.d.ts",
		"auto-imports.d.ts"
	],
	"exclude": [
		"node_modules"
	]
}